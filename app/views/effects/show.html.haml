.row
  .col-md-4.mt-20
    %p
      %span.h4= 'Name ru: '
      = @effect.name_ru

    %p
      %span.h4= 'Name en: '
      = @effect.name_en

    %p
      %span.h4= 'Description ru: '
      = @effect.description_ru

    %p
      %span.h4= 'Description en: '
      = @effect.description_en

    - if @effect.collection
      %p
        %span.h4= 'Collection:'
        = @effect.collection.name_ru

    %p
      %span.h4= 'Version: '
      = @effect.version

    %p
      %span.h4= 'Parent: '
      = @effect.parent

    %p
      %span.h4= 'Extended: '
      = @effect.extended? ? 'Yes' : 'No'

    %p
      %span.h4= 'Hide: '
      = @effect.hide? ? 'Yes' : 'No'

    %p
      %span.h4= 'iOS count downloads: '
      = @effect.ios_count_downloads

    %p
      %span.h4= 'Android count downloads: '
      = @effect.android_count_downloads
  .col-md-8.panel
    .row.panel
      %h3= 'Icons:'
      = image_tag @effect.small_icon.url(:thumb), class: 'img-rounded'
      = image_tag @effect.small_icon_2.url(:thumb), class: 'img-rounded'
      = image_tag @effect.large_icon.url(:thumb), class: 'img-rounded'
      = image_tag @effect.large_icon_2.url(:thumb), class: 'img-rounded'
    .row
      %h3= 'Assets iOS:'
      %p= @effect.assets_ios_file_name
      %p
        - if @effect.assets_ios_file_size
          = (@effect.assets_ios_file_size / (1024.0 * 1024.0)).round(2)
          %span= 'Mb'
    .row
      %h3= 'Assets Android:'
      %p= @effect.assets_android_file_name
      %p
        - if @effect.assets_android_file_size
          = (@effect.assets_android_file_size / (1024.0 * 1024.0)).round(2)
          %span= 'Mb'
    .row
      %h3= 'Page for printing:'
      %p= @effect.page_for_printing_file_name
    .row
      %h3= 'Temporary files:'
      %p= @effect.dat_file_name
      %p= @effect.xml_file_name

= link_to 'Edit', edit_application_effect_path(@application, @effect), class: 'btn btn-default'
= link_to 'Back', @application, class: 'btn btn-link'

