.container
  = form_for [@application, @effect] do |f|
    - if @effect.errors.any?
      #error_explanation
        %h2
          = pluralize(@effect.errors.count, "error")
          prohibited this effect from being saved:

        %ul
        - @effect.errors.full_messages.each do |message|
          %li= message

    .field
      = f.label :name_ru
      %br
      = f.text_field :name_ru
    .field
      = f.label :name_en
      %br
      = f.text_field :name_en
    .field
      = f.label :version
      %br
      = f.number_field :version
    .field
      = f.label :description_ru
      %br
      = f.text_area :description_ru
    .field
      = f.label :description_en
      %br
      = f.text_area :description_en
    .action
      = f.submit
