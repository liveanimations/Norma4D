%p#notice= notice

%h1
  Listing Effects

%table
  %thead
    %tr
      %th
        Name ru
      %th
        Name en
      %th
        Version
      %th
        Description ru
      %th
        Description en
      %th{ colspan: "3" }

  %tbody
    - @application.effects.each do |effect|
      %tr
        %td= effect.name_ru
        %td= effect.name_en
        %td= effect.version
        %td= effect.description_ru
        %td= effect.description_en
        %td= link_to 'Show', effect
        %td= link_to 'Edit', edit_application_effect_path(@application, effect)
        %td= link_to 'Destroy', effect, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Effect', new_application_effect_path(@application)
