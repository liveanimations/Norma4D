.container
  %h2= 'Resend confirmation instructions'
  .col-md-4
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .form-wrap
        .row
          .form-group
            = f.label :email, class: 'control-label'
            = f.email_field :email, required: true, autofocus: true, class: 'form-control'

      .row.form-group
        = f.submit "Resend confirmation instructions", class: 'btn btn-default btn-primary'
      .row
        = link_to 'Sign Up', new_registration_path(resource_name), class: 'btn btn-link'
        = link_to 'Log in', new_user_session_path, class: 'btn btn-link'

