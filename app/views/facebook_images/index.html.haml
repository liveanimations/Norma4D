.row
  .col-xs-10
    %h1= FacebookImage.model_name.human.pluralize
  .col-xs-2
    .title-control.pull-right.mt-20
      = link_to 'New', new_facebook_image_path, class: 'btn btn-default'

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= 'Name'
      %th.thin-column= 'Actions'

  %tbody
    - @facebook_images.each do |facebook_image|
      %tr
        %td
          = link_to facebook_image.name, facebook_image
        %td.text-center
          .btn-group.btn-group-xs{ role: 'group' }
            %button.btn.btn-default.dropdown-toggle{ data: { toggle: 'dropdown' } }
              = 'Select'
              %span.caret
            %ul.dropdown-menu{ role: 'menu' }
              %li= link_to 'Edit', edit_facebook_image_path(facebook_image)
              %li= link_to 'Destroy', facebook_image, method: :delete,
                class: 'bg-danger', data: { confirm: t('helpers.links.confirm') }

