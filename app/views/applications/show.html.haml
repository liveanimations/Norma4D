.row.action-name-row-wrap
  .col-md-11
    %h1= @application.name
  .back-btn-col-wrap
    = link_to 'Back', applications_path
  .row
    .col-xs-10
      %h1= Collection.model_name.human.pluralize
    .col-xs-2
      .title-control.pull-right.mt-20
        = link_to 'Create Collection', new_application_collection_path(@application), class: 'btn btn-default'

    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th= 'Name'
          %th.thin-column= 'Actions'

      %tbody
        - @application.collections.each do |collection|
          %tr
            %td
              = link_to @application.name, application_collection_path(@application, collection)
            %td.text-center
              .btn-group.btn-group-xs{ role: 'group' }
                %button.btn.btn-default.dropdown-toggle{ data: { toggle: 'dropdown' } }
                  = 'Select'
                  %span.caret
                %ul.dropdown-menu{ role: 'menu' }
                  %li= link_to 'Edit', edit_application_collection_path(@application, collection)
                  %li= link_to 'Destroy', application_collection_path(@application, collection), method: :delete, remote: true,
                    class: 'bg-danger', data: { confirm: 'Are you sure?' }

  .row
    .col-xs-10
      %h1= Effect.model_name.human.pluralize
    .col-xs-2
      .title-control.pull-right.mt-20
        = link_to 'Create Effect', new_application_effect_path(@application), class: 'btn btn-default'

    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th= 'Name'
          %th.thin-column= 'Actions'

      %tbody
        - @application.effects.each do |effect|
          %tr
            %td
              = link_to @application.name, application_collections_path(@application, effect)
            %td.text-center
              .btn-group.btn-group-xs{ role: 'group' }
                %button.btn.btn-default.dropdown-toggle{ data: { toggle: 'dropdown' } }
                  = 'Select'
                  %span.caret
                %ul.dropdown-menu{ role: 'menu' }
                  %li= link_to 'Edit', edit_application_effect_path(@application, effect)
                  %li= link_to 'Destroy', application_effect_path(@application, effect), method: :delete, remote: true,
                    class: 'bg-danger', data: { confirm: 'Are you sure?' }
