.row
  .col-xs-12.mt-20
    .title-control.pull-right.mb-10
      = link_to 'Create Commercial', new_application_commercial_path(@application), class: 'btn btn-default'

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= 'Title RU'
      %th= 'Title EN'
      %th= 'Description RU'
      %th= 'Description EN'
      %th.thin-column= 'Version'
      %th.thin-column= 'Price'
      %th.thin-column= 'Actions'

  %tbody
    - @application.commercials.each do |commercial|
      %tr
        %td= link_to commercial.title_ru, application_commercial_path(@application, commercial)
        %td= link_to commercial.title_en, application_commercial_path(@application, commercial)
        %td= commercial.description_ru
        %td= commercial.description_en
        %td.text-center= commercial.version
        %td.text-center= commercial.price
        %td.text-center
          .btn-group.btn-group-xs{ role: 'group' }
            %button.btn.btn-default.dropdown-toggle{ data: { toggle: 'dropdown' } }
              = 'Select'
              %span.caret
            %ul.dropdown-menu{ role: 'menu' }
              %li= link_to 'Edit', edit_application_commercial_path(@application, commercial)
              %li= link_to 'Destroy', application_commercial_path(@application, commercial), method: :delete,
                class: 'bg-danger', data: { confirm: 'Are you sure?' }
