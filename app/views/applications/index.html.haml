.row
  .col-xs-10
    %h1= Application.model_name.human.pluralize
  .col-xs-2
    .title-control.pull-right.mt-20
      = link_to 'New', new_application_path, class: 'btn btn-default'

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= 'Name'
      %th.thin-column= 'Actions'

  %tbody
    - @applications.each do |application|
      %tr
        %td
          = link_to application.name, application
        %td.text-center
          .btn-group.btn-group-xs{ role: 'group' }
            %button.btn.btn-default.dropdown-toggle{ data: { toggle: 'dropdown' } }
              = 'Select'
              %span.caret
            %ul.dropdown-menu{ role: 'menu' }
              %li= link_to 'Edit', edit_application_path(application)
              %li= link_to 'Destroy', application, method: :delete, remote: true,
                class: 'bg-danger', data: { confirm: t('helpers.links.confirm') }
