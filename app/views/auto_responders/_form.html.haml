= simple_form_for(@auto_responder) do |f|
  = f.error_notification
  - if f.object.errors.any?
    %ul
      - f.object.errors.full_messages.each do |msg|
        %li= msg

  .row.form-group
    .col-md-4
      = f.label :name
      = f.input_field :name, class: 'form-control'

  .row.form-group
    .col-md-12
      = f.input :content, as: :wysihtml5, input_html: { class: 'form-control', rows: 20 }

  .row.form-group
    .col-md-12
      = f.button :submit
      = link_to 'Cancel', auto_responders_path, class: 'btn btn-default'

