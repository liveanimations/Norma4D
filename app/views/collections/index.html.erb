<p id="notice"><%= notice %></p>

<h1>Listing Collections</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Name ru</th>
      <th>Name en</th>
      <th>Version</th>
      <th>Description ru</th>
      <th>Description en</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.price %></td>
        <td><%= collection.name_ru %></td>
        <td><%= collection.name_en %></td>
        <td><%= collection.version %></td>
        <td><%= collection.description_ru %></td>
        <td><%= collection.description_en %></td>
        <td><%= link_to 'Show', collection %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

