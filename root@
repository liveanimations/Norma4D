path = 'home/rails'

small_icon_effect = File.new("#{path}/effect template/Small icon.png", "r")
small_icon_2_effect = File.new("#{path}/effect template/Small icon 2.png", "r")
large_icon_effect = File.new("#{path}/effect template/Large icon.png", "r")
large_icon_2_effect = File.new("#{path}/effect template/Large icon 2.png", "r")
assets_ios_effect = File.new("#{path}/effect template/Assets ios", "r")
assets_android_effect = File.new("#{path}/effect template/Assets android", "r")
page_for_printing_effect = File.new("#{path}/effect template/Page for printing.pdf", "r")


small_icon_collection = File.new("#{path}/collection template/Small icon.png", "r")
small_icon_2_collection = File.new("#{path}/collection template/Small icon 2.png", "r")
large_icon_collection = File.new("#{path}/collection template/Large icon.png", "r")
large_icon_2_collection = File.new("#{path}/collection template/Large icon 2.png", "r")
medium_icon_collection = File.new("#{path}/collection template/Medium icon.png", "r")
medium_icon_2_collection = File.new("#{path}/collection template/Medium icon 2.png", "r")

app = Application.find(2)

10.times do |col|
  coll = app.collections.create(
    name_ru: "Test_#{col + 1}",
    price: 12,
    small_icon: small_icon_collection,
    small_icon_2: small_icon_2_collection,
    large_icon: large_icon_collection,
    large_icon_2: large_icon_2_collection,
    medium_icon: medium_icon_collection,
    medium_icon_2: medium_icon_2_collection,
    hide: true
  )
  10.times do |eff|
    coll.effects.create(
      name_ru: "Test_#{(eff + 1) * (col + 1)}",
      application_id: app.id,
      small_icon: small_icon_effect,
      small_icon_2: small_icon_2_effect,
      large_icon: large_icon_effect,
      large_icon_2: large_icon_2_effect,
      assets_ios: assets_ios_effect,
      assets_android: assets_android_effect,
      page_for_printing: page_for_printing_effect,
      tmp1: File.new("#{path}/MarkerData/TestData(#{(eff + 1) * (col + 1)})/TestData.dat", 'r'),
      tmp2: File.new("#{path}/MarkerData/TestData(#{(eff + 1) * (col + 1)})/TestData.xml", 'r'),
      hide: true
    )
  end
end
